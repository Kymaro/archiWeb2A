{# templates/backoffice/adminlayout.html.twig #}

{% extends "baselayout.html.twig" %}

{% block brand %}
    <a class="navbar-brand" href="/admin">TRAVEL'INT</a>
{% endblock %}
{% block menu %}
    <li><a href="{{ path('admin_circuitlist') }}">Administration Circuit</a> </li>
    <li><a href="#{# path('admin_programmationlist') #}">Administration Programmations</a></li>
    <li><a href="{{ path('home') }}">Vue utilisateur</a></li>
{% endblock %}

{% block header %}
    {% for message in app.session.flashbag.get('message') %}
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            <p>{{ message }}</p>
        </div>
    {% endfor %}

{% endblock %}{# menu #}